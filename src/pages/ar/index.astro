---
import BaseLayout from "@layouts/BaseLayout.astro";
import LivePriceWidget from "@components/LivePriceWidget.astro";
import RegulatoryStatusBadge from "@components/RegulatoryStatusBadge.astro";
import ExchangeComparisonTable from "@components/ExchangeComparisonTable.astro";
import FAQ from "@components/FAQ.astro";
import SourcesList from "@components/SourcesList.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";

const title = "Bitcoin en Argentina 2026: Dólar Cripto, Precio y Regulación | free-bitcoin.lat";
const description = "Bitcoin en Argentina 2026: precio BTC/ARS, dólar cripto vs dólar blue, regulación CNV PSAV, impuestos AFIP/ARCA, mejores exchanges y cómo comprar con pesos.";
const canonical = "https://free-bitcoin.lat/ar/";

const exchanges = [
  {
    name: "Airtm",
    url: "https://app.airtm.com/ivt/kokot5m1iwkq0",
    fees: "Variable según método",
    kycLevel: "Básico" as const,
    paymentMethods: ["Transferencia ARS", "P2P", "Wallet"],
    bestFor: "Argentina: mejor cobertura local",
    isAffiliate: true,
  },
  {
    name: "Binance",
    url: "https://accounts.binance.com/register?ref=346436875",
    fees: "0.10% maker/taker",
    kycLevel: "Completo" as const,
    paymentMethods: ["Transferencia ARS", "P2P", "Tarjeta"],
    bestFor: "Volumen alto, P2P en pesos",
    isAffiliate: true,
  },
  {
    name: "Bybit",
    url: "https://www.bybit.com/en/invite/?ref=NX1PKE",
    fees: "0.10% maker/taker",
    kycLevel: "Básico" as const,
    paymentMethods: ["P2P", "Tarjeta"],
    bestFor: "Spot y derivados",
    isAffiliate: true,
  },
  {
    name: "Firefish",
    url: "https://firefish.io?ref=satoshi713",
    fees: "Variable",
    kycLevel: "Básico" as const,
    paymentMethods: ["Transferencia bancaria", "Bitcoin"],
    bestFor: "Préstamos colateralizados BTC",
    isAffiliate: true,
  },
];

const faqItems = [
  {
    q: "¿Es legal comprar Bitcoin en Argentina?",
    a: "Sí, comprar y vender Bitcoin es completamente legal en Argentina para personas físicas. Los exchanges que operan como plataformas de intercambio deben estar registrados como Proveedores de Servicios de Activos Virtuales (PSAV) ante la Comisión Nacional de Valores (CNV) según la RG 994/2024. El uso personal y las operaciones P2P entre particulares no requieren registro.",
  },
  {
    q: "¿Qué es el dólar cripto en Argentina?",
    a: "El dólar cripto es la cotización implícita del dólar estadounidense que se obtiene al comprar o vender stablecoins como USDT en exchanges de criptomonedas. Como el USDT vale nominalmente 1 dólar, el precio en pesos del USDT refleja un tipo de cambio dólar/peso determinado por el mercado. Se usa como alternativa al dólar blue y suele cotizar cerca de él, con variaciones según la plataforma. Más detalles en nuestra guía <a href='/ar/dolar-crypto/'>Dólar cripto Argentina</a>.",
  },
  {
    q: "¿Cuánto vale 1 Bitcoin en pesos argentinos?",
    a: "El precio en tiempo real de 1 BTC en pesos argentinos se muestra en el widget al inicio de esta página. El valor se calcula multiplicando el precio internacional del Bitcoin en dólares por el tipo de cambio implícito del mercado cripto (dólar cripto). Para ver el historial, conversor y análisis, visita nuestra página <a href='/ar/precio-bitcoin-ars/'>Precio Bitcoin en ARS</a>.",
  },
  {
    q: "¿Tengo que declarar Bitcoin a AFIP/ARCA?",
    a: "Sí. Según la legislación fiscal argentina, las ganancias obtenidas por la compra y venta de criptomonedas están gravadas por el Impuesto a las Ganancias. Además, el saldo de criptomonedas al 31 de diciembre de cada año debe declararse en el impuesto a los Bienes Personales. AFIP (ahora ARCA) requiere que los contribuyentes incluyan estos activos en sus declaraciones anuales.",
  },
  {
    q: "¿Puedo comprar USDT con pesos argentinos?",
    a: "Sí. Las principales opciones son: Binance P2P (compras directas a vendedores locales en ARS), Ripio (exchange local registrado como PSAV), Lemon Cash (app con tarjeta prepaga) y Belo. En todos los casos necesitas completar el proceso de verificación de identidad (KYC). El método de depósito más común es la transferencia bancaria en pesos.",
  },
  {
    q: "¿Qué es el premium BTC en Argentina?",
    a: "El premium BTC en Argentina es el porcentaje de diferencia entre el precio de BTC cotizado en pesos en un exchange argentino (convertido a dólares usando el tipo de cambio cripto) y el precio internacional del BTC en dólares. Cuando hay restricciones cambiarias y alta demanda local, el BTC en Argentina puede cotizar por encima del precio global. Podés ver el índice premium actualizado en <a href='/calculadoras/premium-btc/'>nuestra calculadora</a>.",
  },
];

const sources = [
  { label: "CNV – Comisión Nacional de Valores", url: "https://www.cnv.gov.ar" },
  { label: "AFIP / ARCA – Administración Federal de Ingresos Públicos", url: "https://www.afip.gob.ar" },
  { label: "BCRA – Banco Central de la República Argentina", url: "https://www.bcra.gob.ar" },
  { label: "FMI – Argentina", url: "https://www.imf.org/en/countries/ARG" },
];

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "Article",
    headline: "Bitcoin en Argentina 2026: guía completa",
    description: description,
    url: canonical,
    dateModified: "2026-02-23",
    author: { "@type": "Organization", name: "free-bitcoin.lat" },
    publisher: { "@type": "Organization", name: "free-bitcoin.lat", url: "https://free-bitcoin.lat" },
    inLanguage: "es",
    about: { "@type": "Thing", name: "Bitcoin en Argentina" },
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: faqItems.map((item) => ({
      "@type": "Question",
      name: item.q,
      acceptedAnswer: { "@type": "Answer", text: item.a.replace(/<[^>]+>/g, "") },
    })),
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      { "@type": "ListItem", position: 1, name: "Inicio", item: "https://free-bitcoin.lat/" },
      { "@type": "ListItem", position: 2, name: "Argentina", item: canonical },
    ],
  },
];
---

<BaseLayout title={title} description={description} canonical={canonical} jsonLd={jsonLd}>

  <div class="container">
    <Breadcrumbs items={[
      { label: "Inicio", href: "/" },
      { label: "Argentina" },
    ]} />
  </div>

  <!-- Hero -->
  <section class="ar-hero">
    <div class="container">
      <div class="ar-hero-inner">
        <div class="ar-hero-text">
          <span class="hero-eyebrow">Argentina · BTC/ARS</span>
          <h1>Bitcoin en Argentina 2026: guía completa</h1>
          <p class="hero-sub">
            Argentina tiene uno de los mayores volúmenes de adopción de Bitcoin y USDT de América
            Latina, impulsado por la inestabilidad del peso y el cepo cambiario. El concepto de
            "dólar cripto" —la cotización del dólar a través de stablecoins— es central para
            millones de argentinos. La CNV regula los PSAV desde 2024.
          </p>
          <div class="hero-cta">
            <a href="/ar/dolar-crypto/" class="btn btn-primary">Dólar cripto</a>
            <a href="/ar/precio-bitcoin-ars/" class="btn btn-secondary">Precio BTC/ARS</a>
          </div>
          <div class="premium-link-box">
            <a href="/calculadoras/premium-btc/" class="premium-link">
              Ver índice premium BTC/ARS →
            </a>
          </div>
        </div>
        <div class="ar-hero-widget card">
          <LivePriceWidget currency="ARS" currencySymbol="$" countryName="Argentina" />
        </div>
      </div>
    </div>
  </section>

  <!-- Regulatory Status -->
  <section class="section" aria-labelledby="regulacion-heading">
    <div class="container">
      <div class="reg-header">
        <RegulatoryStatusBadge
          status="yellow"
          label="Regulación en desarrollo"
          lastUpdate="2026-02-23"
          regulatorName="CNV – RG 994/2024"
          regulatorUrl="https://www.cnv.gov.ar"
        />
      </div>

      <h2 id="regulacion-heading">Regulación cripto Argentina 2026</h2>
      <p class="last-updated">Última actualización: 2026-02-23</p>

      <div class="content-grid">
        <div class="content-main">
          <p>
            El marco regulatorio argentino para criptomonedas experimentó un cambio significativo en
            2024 con la Resolución General <strong>RG 994/2024 de la CNV</strong>, que establece el
            registro obligatorio de Proveedores de Servicios de Activos Virtuales (PSAV). Esta norma
            implementa los estándares del GAFI (Grupo de Acción Financiera Internacional) y exige a
            los exchanges que operen en Argentina obtener habilitación formal ante la Comisión
            Nacional de Valores.
          </p>
          <p>
            En mayo de 2025, la <strong>RG 1058</strong> incorporó el flujo TAD (Trámites a Distancia)
            para simplificar el proceso de registro de PSAV, permitiendo completar la habilitación
            de forma enteramente digital. Los exchanges que no cumplan con el registro pueden ser
            sancionados y su operatoria bloqueada para usuarios argentinos.
          </p>
          <p>
            En el plano impositivo, <strong>AFIP/ARCA</strong> (Administración Federal de Ingresos
            Públicos, ahora Agencia de Recaudación y Control Aduanero) considera que las ganancias
            por operaciones con criptomonedas son ingreso gravable bajo el Impuesto a las Ganancias.
            Los saldos en criptoactivos también deben declararse en el impuesto a Bienes Personales
            al cierre de cada ejercicio fiscal.
          </p>
          <p>
            Importante: <strong>no existe prohibición de uso personal ni de operaciones P2P</strong>
            entre particulares. Cualquier persona física puede comprar, vender, guardar y transferir
            Bitcoin sin restricción legal, siempre que opere con plataformas registradas como PSAV
            o a través de acuerdos directos entre personas.
          </p>

          <div class="highlight">
            <strong>Resumen regulatorio:</strong> Legal con registro PSAV obligatorio para plataformas.
            Las ganancias tributan Ganancias y los saldos se declaran en Bienes Personales. No hay
            restricción para usuarios individuales. Exchanges deben estar registrados en CNV.
          </div>
        </div>

        <div class="content-sidebar">
          <div class="card">
            <h3>Navegación rápida</h3>
            <ul class="quick-links" role="list">
              <li><a href="/ar/precio-bitcoin-ars/">Precio BTC/ARS en tiempo real</a></li>
              <li><a href="/ar/dolar-crypto/">Dólar cripto: qué es y cómo funciona</a></li>
              <li><a href="/calculadoras/premium-btc/">Índice premium BTC/ARS</a></li>
              <li><a href="/calculadoras/">Calculadora BTC/ARS</a></li>
            </ul>
          </div>
          <div class="card" style="margin-top:var(--space-4);">
            <h3>Normativa clave</h3>
            <ul class="reg-list" role="list">
              <li><strong>RG CNV 994/2024</strong> – Registro PSAV obligatorio</li>
              <li><strong>RG CNV 1058/2025</strong> – Flujo TAD para PSAV</li>
              <li><strong>Ley 27.430</strong> – Ganancias: cripto gravable</li>
              <li><strong>Bienes Personales</strong> – Cripto declarable</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Dólar Cripto -->
  <section class="section section-dark" aria-labelledby="dolar-cripto-heading">
    <div class="container">
      <h2 id="dolar-cripto-heading">El dólar cripto en Argentina</h2>
      <p>
        El <strong>dólar cripto</strong> es uno de los términos más buscados en Argentina en el
        contexto de las finanzas personales. Se refiere al tipo de cambio implícito del dólar
        estadounidense que surge de comprar o vender stablecoins como USDT (Tether) en exchanges
        de criptomonedas.
      </p>
      <p>
        En Argentina coexisten múltiples cotizaciones del dólar: el <em>dólar oficial</em>
        (controlado por el BCRA), el <em>dólar MEP</em> (obtenido operando bonos en mercado de
        capitales), el <em>dólar blue</em> (mercado informal) y el <em>dólar cripto</em>. Este
        último funciona así: como USDT vale nominalmente 1 dólar, si comprás 1 USDT por $1.060 ARS,
        eso implica un tipo de cambio de 1.060 pesos por dólar.
      </p>
      <p>
        La ventaja del dólar cripto es que la operación es <strong>legal</strong> (siempre que se
        use un exchange PSAV registrado), digital (24/7, sin necesidad de ir físicamente a ningún
        lado), y rastreable (lo que también implica que AFIP tiene visibilidad sobre las
        operaciones). Es típicamente más conveniente y accesible que el dólar blue, aunque cotiza
        cerca de él.
      </p>
      <div style="margin-top:var(--space-6);">
        <a href="/ar/dolar-crypto/" class="btn btn-primary">Guía completa: Dólar cripto Argentina →</a>
      </div>
    </div>
  </section>

  <!-- Exchanges -->
  <section class="section" aria-labelledby="exchanges-heading">
    <div class="container">
      <h2 id="exchanges-heading">Mejores exchanges para Argentina</h2>
      <p class="section-sub">
        Comparativa de plataformas disponibles para usuarios argentinos. Airtm es la opción
        destacada por su amplia cobertura local y facilidad para operar con pesos. Todos los
        exchanges marcados con AD son enlaces de afiliado.
      </p>

      <ExchangeComparisonTable
        exchanges={exchanges}
        caption="Comparativa de exchanges para Argentina — febrero 2026"
      />

      <div class="exchange-notes">
        <p>
          <strong>Airtm (destacado para Argentina):</strong> Plataforma de pago digital y P2P con
          gran adopción en Argentina. Permite convertir entre pesos, dólares y criptomonedas con
          múltiples métodos de pago locales. Ideal para quienes buscan flexibilidad cambiaria.
        </p>
        <p>
          <strong>Binance P2P:</strong> El mayor mercado P2P del mundo. En Argentina es posible
          comprar y vender USDT directamente con transferencia bancaria en ARS, sin comisión de
          Binance (el spread lo determina el vendedor).
        </p>
        <p>
          <strong>Regulación:</strong> Al operar con exchanges internacionales, verificá que estén
          registrados como PSAV ante la CNV o que operen bajo exención explícita. Los exchanges
          locales como Ripio, Lemon y Belo cuentan con habilitación local.
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <div class="container">
    <FAQ items={faqItems} title="Preguntas frecuentes sobre Bitcoin en Argentina" />
  </div>

  <!-- Sources -->
  <div class="container">
    <SourcesList sources={sources} title="Fuentes oficiales y referencias" />
  </div>

  <!-- Disclaimer -->
  <div class="container">
    <p class="disclaimer">
      <strong>Aviso legal:</strong> Este contenido es solo informativo y no constituye asesoría
      financiera, legal ni fiscal. Consultá a un contador o asesor impositivo matriculado en
      Argentina para tu situación particular. La regulación puede cambiar. Última verificación:
      2026-02-23.
    </p>
  </div>

</BaseLayout>

<style>
  .ar-hero {
    background: linear-gradient(135deg, var(--c-bg) 0%, var(--c-surface-1) 100%);
    border-bottom: 1px solid var(--c-border);
    padding: var(--space-12) 0;
  }
  .ar-hero-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-10);
    align-items: center;
  }
  .hero-eyebrow {
    display: block;
    background: rgba(255, 107, 0, 0.12);
    color: var(--c-primary);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 100px;
    font-size: 0.78rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 0.3em 0.9em;
    margin-bottom: var(--space-4);
    width: fit-content;
  }
  .ar-hero-text h1 { margin-bottom: var(--space-4); }
  .hero-sub {
    color: var(--c-text-muted);
    font-size: 1rem;
    margin-bottom: var(--space-6);
    line-height: 1.7;
  }
  .hero-cta { display: flex; gap: var(--space-3); flex-wrap: wrap; margin-bottom: var(--space-4); }
  .premium-link-box { margin-top: var(--space-3); }
  .premium-link {
    color: var(--c-primary);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }
  .premium-link:hover { opacity: 0.8; text-decoration: underline; }
  .ar-hero-widget { padding: var(--space-6); }
  .reg-header { margin-bottom: var(--space-6); }
  .last-updated { font-size: 0.8rem; color: var(--c-text-muted); margin-bottom: var(--space-6); }
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--space-8);
    align-items: start;
  }
  .content-main p { margin-bottom: var(--space-4); color: var(--c-text); line-height: 1.75; }
  .content-sidebar .card { padding: var(--space-5); }
  .content-sidebar h3 { font-size: 0.95rem; margin-bottom: var(--space-4); }
  .quick-links { list-style: none; display: flex; flex-direction: column; gap: var(--space-2); }
  .quick-links a { font-size: 0.9rem; color: var(--c-text-muted); text-decoration: none; transition: color var(--transition-fast); }
  .quick-links a:hover { color: var(--c-primary); }
  .reg-list { list-style: none; display: flex; flex-direction: column; gap: var(--space-2); font-size: 0.85rem; color: var(--c-text-muted); }
  .section-sub { color: var(--c-text-muted); margin-bottom: var(--space-6); }
  .exchange-notes { margin-top: var(--space-6); display: flex; flex-direction: column; gap: var(--space-3); }
  .exchange-notes p { font-size: 0.875rem; color: var(--c-text-muted); line-height: 1.6; }
  .section-dark { background: var(--c-surface-1); }
  .section-dark p { color: var(--c-text-muted); line-height: 1.75; margin-bottom: var(--space-4); }
  @media (max-width: 900px) {
    .ar-hero-inner { grid-template-columns: 1fr; }
    .content-grid { grid-template-columns: 1fr; }
    .content-sidebar { order: -1; }
  }
</style>
