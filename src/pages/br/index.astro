<script>
  // BTC/BRL Live Price — CoinGecko with localStorage cache (60s)
  (function () {
    const CACHE_KEY = "btc_brl_price_cache";
    const CACHE_TTL = 60 * 1000;
    const API_URL =
      "https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=brl&include_24hr_change=true";

    const priceEl = document.getElementById("btc-brl-price");
    const changeEl = document.getElementById("btc-brl-change");

    function formatBRL(value) {
      return new Intl.NumberFormat("pt-BR", {
        style: "currency",
        currency: "BRL",
        minimumFractionDigits: 0,
        maximumFractionDigits: 0,
      }).format(value);
    }

    function renderPrice(price, change) {
      if (!priceEl || !changeEl) return;
      priceEl.textContent = formatBRL(price);
      const sign = change >= 0 ? "+" : "";
      changeEl.textContent = `${sign}${change.toFixed(2)}% (24h)`;
      changeEl.className = "price-change " + (change >= 0 ? "change-up" : "change-down");
    }

    function fetchPrice() {
      fetch(API_URL)
        .then((r) => r.json())
        .then((data) => {
          const price = data.bitcoin.brl;
          const change = data.bitcoin.brl_24h_change;
          localStorage.setItem(CACHE_KEY, JSON.stringify({ price, change, ts: Date.now() }));
          renderPrice(price, change);
        })
        .catch(() => {
          if (priceEl) priceEl.textContent = "Indisponível";
        });
    }

    try {
      const cached = JSON.parse(localStorage.getItem(CACHE_KEY) || "null");
      if (cached && Date.now() - cached.ts < CACHE_TTL) {
        renderPrice(cached.price, cached.change);
        return;
      }
    } catch (_) {}

    fetchPrice();
  })();
</script>
