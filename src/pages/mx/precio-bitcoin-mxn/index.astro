<script>
  // BTC/MXN Converter – reads price from localStorage cache written by LivePriceWidget
  function initConverter() {
    const inputBtc = document.getElementById("input-btc") as HTMLInputElement | null;
    const inputMxn = document.getElementById("input-mxn") as HTMLInputElement | null;
    const priceDisplay = document.getElementById("converter-price-display");

    if (!inputBtc || !inputMxn) return;

    function getBtcMxnPrice(): number | null {
      try {
        const raw = localStorage.getItem("btc_price_mxn");
        if (!raw) return null;
        const data = JSON.parse(raw) as { local?: number; fetchedAt?: number };
        // Accept cache up to 30 minutes old for converter
        if (!data.local || !data.fetchedAt) return null;
        if (Date.now() - data.fetchedAt > 30 * 60 * 1000) return null;
        return data.local;
      } catch {
        return null;
      }
    }

    function formatMxn(n: number): string {
      return n.toLocaleString("es-MX", { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    function formatBtc(n: number): string {
      return n.toLocaleString("es-MX", { minimumFractionDigits: 6, maximumFractionDigits: 8 });
    }

    function updatePriceDisplay(price: number) {
      if (priceDisplay) {
        priceDisplay.textContent = `Precio de referencia: 1 BTC ≈ $${formatMxn(price)} MXN`;
      }
    }

    let btcPrice = getBtcMxnPrice();

    // Poll for price if not yet available (widget might still be loading)
    let attempts = 0;
    const pollInterval = setInterval(() => {
      btcPrice = getBtcMxnPrice();
      if (btcPrice) {
        updatePriceDisplay(btcPrice);
        clearInterval(pollInterval);
      }
      attempts++;
      if (attempts > 30) clearInterval(pollInterval); // give up after ~30s
    }, 1000);

    if (btcPrice) {
      updatePriceDisplay(btcPrice);
    }

    let isUpdatingFromBtc = false;
    let isUpdatingFromMxn = false;

    inputBtc.addEventListener("input", () => {
      if (isUpdatingFromMxn) return;
      isUpdatingFromBtc = true;
      const price = getBtcMxnPrice();
      if (!price) { isUpdatingFromBtc = false; return; }
      const btcVal = parseFloat(inputBtc.value);
      if (!isNaN(btcVal) && btcVal >= 0) {
        inputMxn.value = formatMxn(btcVal * price);
      } else {
        inputMxn.value = "";
      }
      isUpdatingFromBtc = false;
    });

    inputMxn.addEventListener("input", () => {
      if (isUpdatingFromBtc) return;
      isUpdatingFromMxn = true;
      const price = getBtcMxnPrice();
      if (!price) { isUpdatingFromMxn = false; return; }
      const mxnVal = parseFloat(inputMxn.value.replace(/,/g, ""));
      if (!isNaN(mxnVal) && mxnVal >= 0) {
        inputBtc.value = formatBtc(mxnVal / price);
      } else {
        inputBtc.value = "";
      }
      isUpdatingFromMxn = false;
    });
  }

  initConverter();
  document.addEventListener("astro:page-load", initConverter);
</script>
