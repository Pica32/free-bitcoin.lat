<script>
  // BTC/ARS Converter logic
  const CACHE_KEY = "btc_price_ars";
  let currentBtcArs = 0;

  function getCachedPrice(): number {
    try {
      const raw = localStorage.getItem(CACHE_KEY);
      if (!raw) return 0;
      const data = JSON.parse(raw) as { local?: number; fetchedAt?: number };
      if (!data.fetchedAt || Date.now() - data.fetchedAt > 10 * 60 * 1000) return 0;
      return data.local ?? 0;
    } catch {
      return 0;
    }
  }

  async function fetchArsPrice(): Promise<number> {
    try {
      const res = await fetch(
        "https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=ars",
        { signal: AbortSignal.timeout(6000) }
      );
      if (!res.ok) return 0;
      const data = (await res.json()) as { bitcoin?: { ars?: number } };
      return data?.bitcoin?.ars ?? 0;
    } catch {
      return 0;
    }
  }

  function formatArs(n: number): string {
    return n.toLocaleString("es-AR", { minimumFractionDigits: 0, maximumFractionDigits: 0 });
  }

  function formatBtc(n: number): string {
    return n.toLocaleString("es-AR", { minimumFractionDigits: 8, maximumFractionDigits: 8 });
  }

  function updateConverterNote(price: number): void {
    const note = document.getElementById("converter-rate-note");
    if (note && price > 0) {
      note.textContent = `Tasa de referencia: 1 BTC = $${formatArs(price)} ARS`;
    }
  }

  function initConverter(): void {
    const inputBtc = document.getElementById("input-btc") as HTMLInputElement | null;
    const inputArs = document.getElementById("input-ars") as HTMLInputElement | null;
    if (!inputBtc || !inputArs) return;

    // Try cached price first
    const cached = getCachedPrice();
    if (cached > 0) {
      currentBtcArs = cached;
      updateConverterNote(cached);
    }

    // Fetch fresh price
    fetchArsPrice().then((price) => {
      if (price > 0) {
        currentBtcArs = price;
        updateConverterNote(price);
      }
    });

    inputBtc.addEventListener("input", () => {
      if (!currentBtcArs) return;
      const btcVal = parseFloat(inputBtc.value);
      if (!isNaN(btcVal) && btcVal >= 0) {
        inputArs.value = Math.round(btcVal * currentBtcArs).toString();
      } else {
        inputArs.value = "";
      }
    });

    inputArs.addEventListener("input", () => {
      if (!currentBtcArs) return;
      const arsVal = parseFloat(inputArs.value);
      if (!isNaN(arsVal) && arsVal >= 0) {
        inputBtc.value = (arsVal / currentBtcArs).toFixed(8);
      } else {
        inputBtc.value = "";
      }
    });
  }

  initConverter();
  document.addEventListener("astro:page-load", initConverter);
</script>
