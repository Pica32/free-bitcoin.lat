<style>
  h1 {
    font-size: clamp(1.8rem, 4vw, 2.4rem);
    margin: var(--space-4) 0;
  }

  h2 {
    font-size: clamp(1.3rem, 2.5vw, 1.7rem);
    margin-bottom: var(--space-4);
    color: var(--c-primary);
  }

  .lead {
    font-size: 1.05rem;
    color: var(--c-text-muted);
    margin-bottom: var(--space-6);
    max-width: 720px;
  }

