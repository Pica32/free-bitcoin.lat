    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .method-details li {
    font-size: 0.85rem;
    color: var(--c-text-muted);
    padding-left: var(--space-3);
    border-left: 2px solid var(--c-border);
  }

  .method-details strong {
    color: var(--c-text);
  }

  /* Steps */
  .steps-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    margin-top: var(--space-6);
    counter-reset: steps;
  }

  .step-item {
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    background: var(--c-primary);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 0.9rem;
    margin-top: 2px;
  }

  .step-content h3 {
    font-size: 1rem;
    margin-bottom: var(--space-2);
  }

  .step-content p {
    font-size: 0.9rem;
    margin-bottom: 0;
  }

  .tip-box {
    padding: var(--space-4) var(--space-6);
    border-left: 3px solid var(--c-primary);
    margin-top: var(--space-6);
    font-size: 0.9rem;
    color: var(--c-text-muted);
    line-height: 1.6;
  }

  .tip-box strong {
    color: var(--c-primary);
  }

  /* Legal */
  .legal-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--space-4);
    margin: var(--space-6) 0;
  }

  .legal-card {
    padding: var(--space-6);
  }

  .legal-card h3 {
    font-size: 1rem;
    margin-bottom: var(--space-3);
    color: var(--c-primary);
  }

  .legal-card ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .legal-card li {
    font-size: 0.88rem;
    color: var(--c-text-muted);
    padding-left: var(--space-4);
    position: relative;
    line-height: 1.5;
  }

  .legal-card li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--c-success);
    font-weight: 700;
  }

  @media (max-width: 640px) {
    .stats-row {
      grid-template-columns: repeat(2, 1fr);
    }

    .step-item {
      flex-direction: column;
    }
