---
import BaseLayout from "@layouts/BaseLayout.astro";
import LivePriceWidget from "@components/LivePriceWidget.astro";
import RegulatoryStatusBadge from "@components/RegulatoryStatusBadge.astro";
import ExchangeComparisonTable from "@components/ExchangeComparisonTable.astro";
import FAQ from "@components/FAQ.astro";
import SourcesList from "@components/SourcesList.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import { articleSchema, faqSchema, breadcrumbSchema } from "@lib/schema";

const title = "Bitcoin en Guatemala 2026: BTC/GTQ, Remesas 19% PIB y P2P | free-bitcoin.lat";
const description = "Bitcoin en Guatemala 2026: precio BTC/GTQ, remesas cripto (remesas son ~19% del PIB), exchanges P2P, estado legal SIB e Iniciativa 6538 en debate.";
const canonical = "https://free-bitcoin.lat/gt/";

const exchanges = [
  {
    name: "Binance",
    url: "https://accounts.binance.com/register?ref=346436875",
    fees: "0.10% maker/taker",
    kycLevel: "Completo" as const,
    paymentMethods: ["P2P GTQ", "Transferencia", "Tarjeta"],
    bestFor: "Mayor liquidez, P2P en quetzales",
    isAffiliate: true,
  },
  {
    name: "Airtm",
    url: "https://app.airtm.com/ivt/kokot5m1iwkq0",
    fees: "Variable segun metodo",
    kycLevel: "Basico" as const,
    paymentMethods: ["Transferencia GTQ", "P2P", "Wallet"],
    bestFor: "Remesas familiares, cobertura local",
    isAffiliate: true,
  },
  {
    name: "CoinEx",
    url: "https://www.coinex.com/register?rc=ksvwm",
    fees: "0.20% maker/taker",
    kycLevel: "Basico" as const,
    paymentMethods: ["USDT", "P2P", "Transferencia"],
    bestFor: "KYC minimo, acceso global",
    isAffiliate: true,
  },
];

const faqItems = [
  {
    q: "¿Es legal comprar Bitcoin en Guatemala?",
    a: "El uso personal de Bitcoin en Guatemala no esta prohibido. Sin embargo, la Superintendencia de Bancos (SIB) no ha reconocido las criptomonedas como moneda de curso legal ni como activo financiero regulado. La Iniciativa de Ley 6538, debatida en el Congreso, busca crear un marco regulatorio formal, pero a febrero de 2026 aun no ha sido aprobada. Los usuarios individuales pueden comprar y guardar cripto sin restriccion expresa.",
  },
  {
    q: "¿Por que las remesas son tan importantes en Guatemala?",
    a: "Guatemala recibe remesas equivalentes a aproximadamente el 19% de su PIB, una de las tasas mas altas de America Latina y del mundo. El principal corredor es EE.UU.-Guatemala. Miles de familias guatemaltecas dependen de estos envios para su subsistencia diaria. Bitcoin y USDT pueden reducir el costo de las remesas del 5-8% actual a menos del 2%.",
  },
  {
    q: "¿Como envio dinero de EE.UU. a Guatemala con Bitcoin?",
    a: "El proceso es: 1) El familiar en EE.UU. compra USDT o BTC en Coinbase, Binance o similar; 2) Envia a la wallet del receptor en Guatemala (red TRC-20 o Lightning para comisiones minimas); 3) El receptor convierte a quetzales via Binance P2P o Airtm vendiendo a compradores locales. El costo total suele ser menor al 2% versus el 5-8% de Western Union o MoneyGram.",
  },
  {
    q: "¿Que es la Iniciativa de Ley 6538 en Guatemala?",
    a: "La Iniciativa 6538 es una propuesta legislativa presentada en el Congreso de Guatemala para regular los activos digitales, incluyendo criptomonedas. Establece requisitos de licencia para exchanges, normas AML/KYC y definiciones legales de activos virtuales. A febrero de 2026 continua en debate en comisiones, sin fecha definitiva de aprobacion.",
  },
  {
    q: "¿Que metodo de pago funciona mejor para P2P en Guatemala?",
    a: "Los metodos mas comunes en el mercado P2P guatemalteco son transferencia bancaria local en quetzales (principalmente Banrural, BAC Credomatic y Banco Industrial) y, cada vez mas, pagos via app bancaria. Para recepciones del exterior, Zelle (si el familiar tiene cuenta bancaria en EE.UU.) y Airtm son los metodos mas practicos.",
  },
];

const sources = [
  { label: "SIB – Superintendencia de Bancos Guatemala", url: "https://www.sib.gob.gt" },
  { label: "Banguat – Banco de Guatemala", url: "https://www.banguat.gob.gt" },
  { label: "Banco Mundial – Remesas Guatemala", url: "https://remittanceprices.worldbank.org" },
  { label: "Congreso Guatemala – Iniciativa 6538", url: "https://www.congreso.gob.gt" },
];

const jsonLd = [
  articleSchema({ title, description, url: canonical, datePublished: "2026-01-01", dateModified: "2026-02-23" }),
  faqSchema(faqItems),
  breadcrumbSchema([
    { name: "Inicio", item: "https://free-bitcoin.lat/" },
    { name: "Guatemala", item: canonical },
  ]),
];
---

<BaseLayout title={title} description={description} canonical={canonical} jsonLd={jsonLd}>

  <div class="container">
    <Breadcrumbs items={[
      { label: "Inicio", href: "/" },
      { label: "Guatemala" },
    ]} />
  </div>

  <!-- Hero -->
  <section class="gt-hero">
    <div class="container">
      <div class="gt-hero-inner">
        <div class="gt-hero-text">
          <span class="hero-eyebrow">Guatemala · BTC/GTQ · Remesas 19% PIB</span>
          <h1>Bitcoin en Guatemala 2026: BTC/GTQ, remesas y P2P</h1>
          <p class="hero-sub">
            Guatemala tiene una de las economias mas dependientes de remesas del mundo:
            los envios del exterior representan aproximadamente el <strong>19% del PIB</strong>
            nacional. Con mas de 18 millones de dolares entrando cada año desde EE.UU.,
            Bitcoin y USDT ofrecen una alternativa mas barata y rapida que las remesadoras
            tradicionales. La Iniciativa de Ley 6538 busca regular el ecosistema cripto.
          </p>
          <div class="hero-cta">
            <a href="/remesas/us-gt/" class="btn btn-primary">Remesas EE.UU. a Guatemala</a>
          </div>
        </div>
        <div class="gt-hero-widget card">
          <LivePriceWidget currency="GTQ" currencySymbol="Q" countryName="Guatemala" />
        </div>
      </div>
    </div>
  </section>

  <!-- Regulatory Status -->
  <section class="section" aria-labelledby="regulacion-heading">
    <div class="container">
      <RegulatoryStatusBadge
        status="red"
        label="Sin marco regulatorio — SIB"
        lastUpdate="2026-02-23"
        regulatorName="SIB – Superintendencia de Bancos"
        regulatorUrl="https://www.sib.gob.gt"
      />

      <h2 id="regulacion-heading">Estado legal de Bitcoin en Guatemala 2026</h2>
      <p class="last-updated">Ultima actualizacion: 2026-02-23</p>

      <div class="content-grid">
        <div class="content-main">
          <p>
            Guatemala no cuenta con legislacion especifica para criptomonedas. La
            <strong>Superintendencia de Bancos (SIB)</strong> ha aclarado que las criptomonedas
            no son moneda de curso legal ni estan respaldadas por el Estado guatemalteco. El
            Banco de Guatemala (Banguat) tampoco reconoce el Bitcoin como activo financiero
            bajo su marco de supervision.
          </p>
          <p>
            Sin embargo, comprar, guardar y usar Bitcoin de forma personal no esta prohibido
            por ninguna ley guatemalteca vigente. La ausencia de regulacion especifica no
            equivale a prohibicion: los usuarios individuales operan en un espacio legal
            sin restricciones explicitas.
          </p>
          <p>
            La <strong>Iniciativa de Ley 6538</strong>, presentada en el Congreso de la
            Republica, busca llenar ese vacio legal. La propuesta establece definiciones
            juridicas para activos digitales, requisitos de licencia para exchanges que
            operen en territorio guatemalteco, y normas de prevencion de lavado de dinero
            (AML). A febrero de 2026 continua en debate en comisiones legislativas.
          </p>
          <div class="highlight">
            <strong>Resumen para el usuario:</strong> Puedes comprar y guardar Bitcoin
            legalmente en Guatemala como persona individual. Ninguna ley lo prohibe.
            Los exchanges aun no estan regulados localmente, por lo que se recomiendan
            plataformas internacionales establecidas.
          </div>
        </div>

        <div class="content-sidebar">
          <div class="card">
            <h3>Datos clave</h3>
            <ul class="quick-links" role="list">
              <li>Remesas: ~19% del PIB</li>
              <li>Regulacion: en debate (Iniciativa 6538)</li>
              <li>Regulador: SIB / Banguat</li>
              <li><a href="/remesas/us-gt/">Calculadora remesas EE.UU.-GT</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Exchanges -->
  <section class="section section-dark" aria-labelledby="exchanges-heading">
    <div class="container">
      <h2 id="exchanges-heading">Exchanges disponibles en Guatemala</h2>
      <p class="section-sub">
        No hay exchanges con licencia local en Guatemala. Los guatemaltecos usan plataformas
        internacionales, siendo Binance P2P la mas activa para operaciones en quetzales.
      </p>

      <ExchangeComparisonTable
        exchanges={exchanges}
        caption="Comparativa de exchanges para Guatemala — febrero 2026"
      />

      <p class="affiliate-disclosure" style="margin-top:var(--space-4)">
        Este es un enlace de afiliado. Si te registras, recibimos una pequeña comision sin costo adicional para ti.
      </p>
    </div>
  </section>

  <!-- FAQ -->
  <div class="container">
    <FAQ items={faqItems} title="Preguntas frecuentes sobre Bitcoin en Guatemala" />
  </div>

  <!-- Sources -->
  <div class="container">
    <SourcesList sources={sources} title="Fuentes oficiales y referencias" />
  </div>

  <!-- Disclaimer -->
  <div class="container">
    <p class="disclaimer">
      Esto no es asesoria financiera. Ultima actualizacion: 2026-02-23.
    </p>
  </div>

</BaseLayout>

<style>
  .gt-hero {
    background: linear-gradient(135deg, var(--c-bg) 0%, var(--c-surface-1) 100%);
    border-bottom: 1px solid var(--c-border);
    padding: var(--space-12) 0;
  }
  .gt-hero-inner { display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-10); align-items: center; }
  .hero-eyebrow {
    display: block;
    background: rgba(255, 107, 0, 0.12);
    color: var(--c-primary);
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 100px;
    font-size: 0.78rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 0.3em 0.9em;
    margin-bottom: var(--space-4);
    width: fit-content;
  }
  .gt-hero-text h1 { margin-bottom: var(--space-4); }
  .hero-sub { color: var(--c-text-muted); font-size: 1rem; margin-bottom: var(--space-6); line-height: 1.7; }
  .hero-cta { display: flex; gap: var(--space-3); flex-wrap: wrap; }
  .gt-hero-widget { padding: var(--space-6); }
  .last-updated { font-size: 0.8rem; color: var(--c-text-muted); margin-bottom: var(--space-6); }
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 260px;
    gap: var(--space-8);
    align-items: start;
    margin-top: var(--space-6);
  }
  .content-main p { margin-bottom: var(--space-4); color: var(--c-text); line-height: 1.75; }
  .content-sidebar .card { padding: var(--space-5); }
  .content-sidebar h3 { font-size: 0.95rem; margin-bottom: var(--space-4); }
  .quick-links { list-style: none; display: flex; flex-direction: column; gap: var(--space-2); font-size: 0.9rem; color: var(--c-text-muted); }
  .quick-links a { color: var(--c-text-muted); text-decoration: none; }
  .quick-links a:hover { color: var(--c-primary); }
  .highlight {
    background: rgba(255, 107, 0, 0.08);
    border: 1px solid rgba(255, 107, 0, 0.25);
    border-radius: 8px;
    padding: var(--space-4);
    margin-top: var(--space-4);
    font-size: 0.9rem;
    color: var(--c-text);
  }
  .section-dark { background: var(--c-surface-1); }
  .section-sub { color: var(--c-text-muted); margin-bottom: var(--space-6); }
  .affiliate-disclosure { font-size: 0.8rem; color: var(--c-text-muted); font-style: italic; }
  .disclaimer { font-size: 0.85rem; color: var(--c-text-muted); border: 1px solid var(--c-border); border-radius: 6px; padding: var(--space-4); margin-bottom: var(--space-8); }
  @media (max-width: 900px) {
    .gt-hero-inner { grid-template-columns: 1fr; }
    .content-grid { grid-template-columns: 1fr; }
    .content-sidebar { order: -1; }
  }
</style>
